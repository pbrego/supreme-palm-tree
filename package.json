{
  "name": "@supreme-palm-tree/root",
  "description": "Template for setting up a TypeScript monorepo",
  "private": true,
  "workspaces": {
    "packages": [
      "clients/**",
      "configs/**",
      "docs/**",
      "libs/**",
      "tools/**"
    ]
  },
  "scripts": {
    "lint": "eslint --ext js,ts,tsx .",
    "dev": "yarn vite:dev",
    "test": "lerna run test --stream",
    "serve": "lerna run serve --stream",
    "test": "lerna run test --stream",
    "clean": "lerna run clean",
    "build": "lerna run build",
    "lerna:publish": "lerna publish",
    "prepare": "husky install",
    "lint": "lerna run lint",
    "generate": "cd tools/generators && yarn generate",
    "vite:dev": "lerna run --scope @supreme-palm-tree/react-app-vite dev  --stream"
  },
  "devDependencies": {
    "@babel/core": "^7.14.3",
    "@babel/eslint-parser": "^7.14.4",
    "@commitlint/cli": "^13.2.0",
    "@jest/types": "^27.0.6",
    "@testing-library/jest-dom": "^5.5.0",
    "@testing-library/react": "^11.2.3",
    "@types/jest": "^26.0.24",
    "babel-loader": "^8.2.3",
    "conventional-changelog-conventionalcommits": "^4.6.1",
    "husky": "^7.0.4",
    "jest": "^26.6.3",
    "jest-watch-select-projects": "^2.0.0",
    "jest-watch-typeahead": "^0.6.4",
    "lerna": "^4.0.0",
    "lint-staged": "^11.1.1",
    "prettier": "^2.3.0",
    "prettier-eslint": "^12.0.0",
    "pretty-quick": "^3.1.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.4.4",
    "typescript": "^4.3.2",
    "wml": "^0.0.83"
  }
}
